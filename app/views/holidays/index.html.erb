<div class='employeemaincont'>
<%=render "admin/adminmenu" %>
<div class="empsubcon">
<h1>HOLIDAYS</h1>
<table class="table">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
<% @holidays.each do |holiday| %>
    <tr>
     <td>
     <%= holiday.name%>
     </td>
     <td>
     <%= holiday.date%>
     </td>
     <td>
     <%= link_to "Edit", edit_holiday_path(holiday),class:"btn btn-primary" %>
     </td>
     <td>
     <%= button_to "Delete", holiday_path(holiday),method: :delete,class:"btn btn-secondary" %>
     </td>
    <% end %>
</table>
<%= button_to 'Add Holiday', new_holiday_path,method: :get,class:"loginbutton" %>
</div>
</div>